<Window x:Class="TreeSize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tree"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="TreeSize" Height="450" Width="800" Padding="0,-1,0,0">
    <Grid Background="#ffffcf" UseLayoutRounding="False">
        <DockPanel Margin="10">
            <DockPanel DockPanel.Dock="Top">
                
                <TreeView Name="trw_Products" ItemsSource="{Binding}" Margin="5,5,200,5" TreeViewItem.Expanded="trw_Products_Expanded"/> 
            </DockPanel>         

            <ListBox Name="lbResults" Margin="0,10" />

        </DockPanel>
       

    </Grid>
</Window>
